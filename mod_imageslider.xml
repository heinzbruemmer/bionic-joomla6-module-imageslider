<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>Bionic Image Slider</name>
    <author>Bionic Laboratories BLG GmbH</author>
    <creationDate>2025-06</creationDate>
    <copyright>(C) 2025 Bionic Laboratories BLG GmbH</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@bionic-world.net</authorEmail>
    <authorUrl>https://bionic-world.net</authorUrl>
    <version>1.0.0</version>
    <description>Ein flexibler Bildslider für beliebige Modul-Positionen. Bis zu 5 Bilder mit optionalen Links und Bildtexten.</description>
    <files>
        <filename module="mod_imageslider">mod_imageslider.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
        
            <fieldset name="slider" label="Slider Einstellungen">
                <field name="slider_position" type="list" label="Slider Ausrichtung" default="center">
                    <option value="left">Links</option>
                    <option value="center">Mitte</option>
                    <option value="right">Rechts</option>
                </field>

                <field name="slider_width" type="list" label="Breite" default="100">
                    <option value="10">10%</option>
                    <option value="20">20%</option>
                    <option value="25">25%</option>
                    <option value="30">30%</option>
                    <option value="40">40%</option>
                    <option value="50">50%</option>
                    <option value="60">60%</option>
                    <option value="70">70%</option>
                    <option value="80">80%</option>
                    <option value="90">90%</option>
                    <option value="100">100%</option>
                </field>

                <field name="slider_height" type="text" label="Höhe (px)" default="400px" />
                <field name="slide_interval" type="number" label="Wechselzeit (ms)" default="5000" min="1000" max="30000" />
                <field name="transition_speed" type="number" label="Übergang (ms)" default="500" min="100" max="2000" />

                <field name="show_navigation" type="radio" label="Navigation (Pfeile)" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>

                <field name="show_dots" type="radio" label="Punkte anzeigen" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>

                <field name="autoplay" type="radio" label="Autoplay" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>

                <field name="pause_on_hover" type="radio" label="Pause bei Hover" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>
            </fieldset>

            <fieldset name="title_settings" label="Bildtext">
                <field name="show_title" type="radio" label="Bildtext anzeigen" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>

                <field name="title_position" type="list" label="Bildtext Position" default="bottom-left" showon="show_title:1">
                    <option value="top-left">Oben Links</option>
                    <option value="top-center">Oben Mitte</option>
                    <option value="top-right">Oben Rechts</option>
                    <option value="bottom-left">Unten Links</option>
                    <option value="bottom-center">Unten Mitte</option>
                    <option value="bottom-right">Unten Rechts</option>
                </field>
            </fieldset>

            <fieldset name="images" label="Bilder">
                <field name="image1" type="media" label="Bild 1" />
                <field name="image1_link" type="url" label="Bild 1 Link" />
                <field name="image1_alt" type="text" label="Bild 1 Alt-Text" />
                <field name="image1_title" type="text" label="Bild 1 Text" />

                <field name="image2" type="media" label="Bild 2" />
                <field name="image2_link" type="url" label="Bild 2 Link" />
                <field name="image2_alt" type="text" label="Bild 2 Alt-Text" />
                <field name="image2_title" type="text" label="Bild 2 Text" />

                <field name="image3" type="media" label="Bild 3" />
                <field name="image3_link" type="url" label="Bild 3 Link" />
                <field name="image3_alt" type="text" label="Bild 3 Alt-Text" />
                <field name="image3_title" type="text" label="Bild 3 Text" />

                <field name="image4" type="media" label="Bild 4" />
                <field name="image4_link" type="url" label="Bild 4 Link" />
                <field name="image4_alt" type="text" label="Bild 4 Alt-Text" />
                <field name="image4_title" type="text" label="Bild 4 Text" />

                <field name="image5" type="media" label="Bild 5" />
                <field name="image5_link" type="url" label="Bild 5 Link" />
                <field name="image5_alt" type="text" label="Bild 5 Alt-Text" />
                <field name="image5_title" type="text" label="Bild 5 Text" />
            </fieldset>

            <fieldset name="styling" label="Styling">
                <field name="border_radius" type="text" label="Eckenradius" default="0px" />
                <field name="nav_color" type="color" label="Navigation Farbe" default="#ffffff" />
                <field name="nav_bg_color" type="color" label="Navigation Hintergrund" default="#000000" />
                <field name="dot_color" type="color" label="Punkte inaktiv" default="#cccccc" />
                <field name="dot_active_color" type="color" label="Punkte aktiv" default="#0066cc" />
                <field name="title_color" type="color" label="Bildtext Farbe" default="#ffffff" />
                <field name="title_bg_color" type="color" label="Bildtext Hintergrund" default="#000000" />
                <field name="title_bg_opacity" type="list" label="Bildtext Transparenz" default="70">
                    <option value="0">Kein Hintergrund</option>
                    <option value="30">30%</option>
                    <option value="50">50%</option>
                    <option value="70">70%</option>
                    <option value="90">90%</option>
                    <option value="100">100%</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>
